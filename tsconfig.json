{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"esModuleInterop": true,
		"sourceMap": true,
		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
		"paths": {
			"@/tests/*": ["../tests/*"],
			"@/*": ["*"]
		},
		"forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react"
	},
	"include": ["src", "tests"]
}
